{
  "manifest_version": 2,
  "name": "Lazy Friend",
  "description": "This extension will congrat your friends in facebook",
  "version": "1.1",
  "browser_action": {
   "default_icon": "./assets/icon.png",
   "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["./moment/moment.js", "background.js"],
    "persistent": true
  },
  
  "web_accessible_resources": ["font/*.woff2"],

  "permissions": [
    "activeTab",
    "tabs",
    "https://www.facebook.com/",
    "https://m.facebook.com/",
    "storage",
    "notifications",
    "management"
  ]
}